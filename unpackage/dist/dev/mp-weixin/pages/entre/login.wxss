
.plot {
		/* background-color: #f5f5f5; */
		display: flex;
		flex-direction: column;
		align-items: center;
		position: fixed;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
		height: 60%;
		width: 80%;

		border-radius: 30px;
		/* box-shadow: 0 0 500rpx lightgreen; */
}
.logo {
		height: 100rpx;
		width: 100rpx;
		margin-top: 50rpx;
		margin-left: auto;
		margin-right: auto;
}
form {
