
.content {
		background-color: antiquewhite;
		margin: 15px;
		border-radius: 20px;
		padding: 15px;
		display: flex;
		flex-flow: column nowrap;
}
.content .title {}
.content .unit {
		display: flex;
		flex-flow: column nowrap;
		margin: 10px 0;
		width: 310px;
}
.unit .top {
		display: flex;
		flex-flow: row nowrap;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 10px;
}
.top .user-info {
		display: flex;
		flex-flow: row nowrap;
		align-items: center;
}
.user-info .name {
		font-size: 20px;
		margin-left: 10px;
}
.user-info .head {
		width: 40px;
		height: 40px;
		border-radius: 50%;
}
.top .icon {
		width: 30px;
		height: 30px;
}
.middle {
		font-size: 15px;
}
.bottom {
		display: flex;
		flex-flow: row nowrap;
		justify-content: flex-end;
		padding-bottom: 5px;
		border-bottom: 1px gray solid;
		font-size: 10px;
}
