
.content {
		display: flex;
		flex-flow: column nowrap;
}
.unit {
		display: flex;
		flex-flow: row nowrap;
		align-items: center;
		background-color: white;
		justify-content: space-between;
		margin-top: 10px;
		padding: 5px 15px;
}
.title {
		font-size: 18px;
		font-weight: 600;
		color: gray;
}
.bottom {
		display: flex;
		flex-flow: row nowrap;
		align-items: center;
}
.picture {
		width: 60px;
		height: 60px;
		border-radius: 50%;
}
.tail {
		margin-left: 15px;
		font-size: 20px;
		font-weight: bold;
		color: darkgray;
		transform: scale(1, 1.5);
}
.other {
		height: 30px;
}
.bottom .text {
		font-size: 15px;
		color: gray;
		max-width: 150px;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
}
